# Docker Environment Variables for InvoiceForge
# Copy this file to .env and customize as needed:
#   cp .env.docker .env

# ═══════════════════════════════════════════════════════════════════════════
# PostgreSQL Configuration
# ═══════════════════════════════════════════════════════════════════════════
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=singapore_smb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ═══════════════════════════════════════════════════════════════════════════
# Rails Configuration
# ═══════════════════════════════════════════════════════════════════════════
RAILS_ENV=development
RAILS_MAX_THREADS=5

# Database URL
DATABASE_URL=postgres://postgres:postgres@localhost:5432/singapore_smb

DB_NAME=singapore_smb
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# ═══════════════════════════════════════════════════════════════════════════
# Application Configuration
# ═══════════════════════════════════════════════════════════════════════════
APP_HOST=localhost
APP_PORT=3000

# ═══════════════════════════════════════════════════════════════════════════
# MailHog Configuration (Email Testing)
# ═══════════════════════════════════════════════════════════════════════════
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
# Web UI: http://localhost:8025

# ═══════════════════════════════════════════════════════════════════════════
# Development Settings
# ═══════════════════════════════════════════════════════════════════════════
# Set to 1 to enable debug mode
DEBUG=0

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_own_key
STRIPE_SECRET_KEY=sk_test_your_own_key
# STRIPE_WEBHOOK_SECRET=whsec_... (set this after configuring webhook in Stripe Dashboard)
